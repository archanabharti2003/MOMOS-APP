
<section class="cart py-16">

    <% if(session.cart) { %>

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/black-cart.jpg" class="w-10" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summery</h1>
        </div>

        <div class="momo-list">
            <% for(let momos of Object.values(session.cart.items)){ %>
            <div class="flex item-center my-8">
                <img class="w-24" src="/img/<%= momos.item.image %>" alt="">
                <div class="ml-4 flex-1">
                    <h1><%= momos.item.name %></h1>
                    <span><%= momos.item.pieces %></span>
                </div>
                <span class="flex-1"><%= momos.qty %></span>
                <span class="font-bold text-lg">Rs<%= momos.item.price *momos.qty %></span>
            </div>
        <% } %>



        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total amount:- </span>
                <span class="amount text-2xl font-bold ml-2">Rs <%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input type="text" class=" mb-4 border-gray-400 p-2 w-1/2 " placeholder="Address">
                    <input type="text" class="border-gray-400 p-2 w-1/2 " placeholder="Phone Number">
                </form>
                <div>
                    <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                </div>
            </div>
            <!-- <a href="" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 ">Login to Continue</a> -->
        </div>
    </div>
    <% } else{ %>

    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty</h1>
            <p class="text-grey-500 text-lg mb-12">Lorem ipsum dolor sit amet consectetur adipisicing elit. Totam, <br>aspernatur veritatis distinctio corporis accusamus impedit.</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.jpeg" alt=" Empty cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"> Go back</a>
    
        </div>
    </div>
    <% }%>


</section>

